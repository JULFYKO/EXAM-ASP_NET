@model List<EXAM_ASP_NET.Data.Entities.Product>

@{
    ViewData["Title"] = "Cart";
}

<div class="container my-4">
    <div class="card bg-dark text-light shadow-lg rounded-4">
        <div class="card-header border-0 bg-gradient fw-bold fs-4">Ваша корзина</div>
        <div class="card-body">
            <div class="mb-3 text-muted">Загальна кількість: <strong>@(Model?.Count ?? 0)</strong></div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">Корзина порожня.</div>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var p in Model)
                    {
                        <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@p.Title</strong><br />
                                <small class="text-muted">@p.Category?.Name</small>
                            </div>
                            <div class="d-flex gap-2 align-items-center">
                                <span class="badge bg-primary">@p.StartingPrice.ToString("C")</span>
                                <form asp-action="Remove" method="post" class="ms-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
                <form asp-action="Clear" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Очистити корзину</button>
                </form>
            }
        </div>
    </div>
</div>
