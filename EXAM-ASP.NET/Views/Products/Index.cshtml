@using EXAM_ASP_NET.Data.Entities
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Manage Products";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Manage Products</h2>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Starting Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<Product>())
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Category?.Name</td>
                <td>@item.StartingPrice.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>