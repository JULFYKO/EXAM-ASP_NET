@model EXAM_ASP_NET.Data.Entities.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <h2 class="text-light mb-4">Delete Product</h2>

    <div class="card bg-dark text-light shadow-lg rounded-4 p-4 mb-4">
        <h4 class="fw-bold">@Model.Title</h4>
        <dl class="row mt-3">
            <dt class="col-sm-3 text-muted">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name ?? "—"</dd>

            <dt class="col-sm-3 text-muted">Price</dt>
            <dd class="col-sm-9">@Model.StartingPrice.ToString("C")</dd>

            <dt class="col-sm-3 text-muted">Description</dt>
            <dd class="col-sm-9">@Model.Description ?? "—"</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger rounded-3 shadow-sm">Delete</button>
        <a asp-action="Index" class="btn btn-secondary rounded-3 shadow-sm">Cancel</a>
    </form>
</div>
