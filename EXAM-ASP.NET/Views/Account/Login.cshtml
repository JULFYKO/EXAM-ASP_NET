@model EXAM_ASP_NET.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container my-4">
    <div class="card bg-dark text-light shadow-lg rounded-4 mx-auto" style="max-width:540px;">
        <div class="card-header border-0 bg-gradient fw-bold fs-4">”в≥йти</div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <button type="submit" class="btn btn-primary rounded-3">”в≥йти</button>
                    <a asp-action="Register" class="btn btn-outline-light rounded-3">–еЇстрац≥€</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
