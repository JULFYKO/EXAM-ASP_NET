@model IEnumerable<EXAM_ASP_NET.Data.Entities.Bid>
@{
    ViewData["Title"] = "Profile";
}

<div class="container my-4">
    <div class="card bg-dark text-light shadow-lg rounded-4">
        <div class="card-header border-0 bg-gradient fw-bold fs-4">Профіль</div>
        <div class="card-body">
            <h5>Ваші ставки</h5>
            <ul class="list-group list-group-flush">
                @foreach (var b in Model)
                {
                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@(b.Product?.Title ?? ("Product #"+b.ProductId))</strong><br />
                            <small class="text-muted">@b.Timestamp.ToLocalTime().ToString("g")</small>
                        </div>
                        <span class="badge bg-primary rounded-pill fs-6">@b.Amount.ToString("C")</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
