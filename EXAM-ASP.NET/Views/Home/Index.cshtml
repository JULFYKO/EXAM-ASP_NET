@using EXAM_ASP_NET.Data.Entities
@model List<Product>

<div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-light">
        🎉 Welcome to Online Auction
        <img width="55" class="ms-2" src="https://pngimg.com/d/ukraine_PNG16.png" alt="Ukraine" />
    </h1>
    <p class="text-muted">Зроби свою ставку та вигравай 🔥</p>
</div>

@{
    var products = Model ?? new List<Product>();
}

@if (!products.Any())
{
    <div class="alert alert-info rounded-3 shadow-sm bg-dark text-light border-0 text-center">
        Немає товарів для показу.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var i in products)
        {
            <div class="col">
                <partial name="_ProductCardPartial" model="i" />
            </div>
        }
    </div>
}
