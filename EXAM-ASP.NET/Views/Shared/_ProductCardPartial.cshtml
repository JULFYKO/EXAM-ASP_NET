@using EXAM_ASP_NET.Data.Entities
@model Product

@{
    var img = string.IsNullOrWhiteSpace(Model.ImageUrl) ? "/images/placeholder.png" : Model.ImageUrl;
    var desc = Model.Description ?? string.Empty;
    var shortDesc = desc.Length > 120 ? desc[..120] + "…" : desc;
    var price = Model.StartingPrice;
}

<div class="card h-100">
    <img src="@img" class="card-img-top" alt="@Model.Title" onerror="this.src='/images/placeholder.png'">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0">@Model.Title</h5>
            <span class="badge bg-primary">@price.ToString("C")</span>
        </div>

        <p class="text-muted small mb-2">@Model.Category?.Name</p>

        @if (!string.IsNullOrEmpty(shortDesc))
        {
            <p class="card-text small text-truncate">@shortDesc</p>
        }

        <div class="mt-auto d-flex gap-2">
            <a asp-controller="ActiveLots" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary w-100">Details</a>
            <a asp-controller="ActiveLots" asp-action="Bid" asp-route-id="@Model.Id" class="btn btn-sm btn-warning w-100">Bid</a>
        </div>
    </div>
    <div class="card-footer text-muted small">
        ID: @Model.Id
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
