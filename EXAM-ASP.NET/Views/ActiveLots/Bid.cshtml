@model EXAM_ASP_NET.Models.BidViewModel
@{
    ViewData["Title"] = "Place a Bid";
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">Starting Price</dt>
            <dd class="col-sm-9">@Model.StartingPrice.ToString("C")</dd>

            <dt class="col-sm-3">Current Bid</dt>
            <dd class="col-sm-9">@Model.CurrentBid?.ToString("C") ?? "—"</dd>

            <dt class="col-sm-3">Buy Now</dt>
            <dd class="col-sm-9">@Model.BuyNowPrice?.ToString("C") ?? "—"</dd>

            <dt class="col-sm-3">Auction Starts</dt>
            <dd class="col-sm-9">@Model.AuctionStart?.ToLocalTime().ToString("g") ?? "—"</dd>

            <dt class="col-sm-3">Auction Ends</dt>
            <dd class="col-sm-9">@Model.AuctionEnd?.ToLocalTime().ToString("g") ?? "—"</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>

    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" onerror="this.src='/images/placeholder.png'" />
    </div>
</div>

<hr />

<div class="card p-3 mb-3">
    <div class="card-body">
        <form asp-action="Bid" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductId" />

            <div class="form-group mb-2">
                <label asp-for="BidAmount" class="form-label"></label>
                <input asp-for="BidAmount" class="form-control" min="@( (Model.CurrentBid ?? Model.StartingPrice) + Model.MinBidIncrement )" step="0.01" />
                <span asp-validation-for="BidAmount" class="text-danger"></span>
                <small class="form-text text-muted">Мінімальна допустима ставка: @(((Model.CurrentBid ?? Model.StartingPrice) + Model.MinBidIncrement).ToString("C"))</small>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Place / Update Bid</button>

                @if (Model.BuyNowPrice.HasValue)
                {
                    <button type="submit" name="BidAmount" value="@Model.BuyNowPrice.Value" class="btn btn-success">Buy Now (@Model.BuyNowPrice.Value.ToString("C"))</button>
                }

                <a asp-action="Index" asp-controller="ActiveLots" class="btn btn-secondary">Back</a>
            </div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3">@Model.Message</div>
            }
        </form>
    </div>
</div>

@if (Model.BidHistory?.Any() == true)
{
    <h5>Історія ставок</h5>
    <ul class="list-group">
        @foreach (var b in Model.BidHistory)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@b.UserId</strong><br />
                    <small class="text-muted">@b.Timestamp.ToLocalTime().ToString("g")</small>
                </div>
                <span class="badge bg-primary rounded-pill">@b.Amount.ToString("C")</span>
            </li>
        }
    </ul>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            var input = document.querySelector('[name="BidAmount"]');
            if (!input) return;
            var min = input.getAttribute('min');
            input.addEventListener('focus', function(){ input.setAttribute('placeholder', min); });
        })();
    </script>
}
