@model EXAM_ASP_NET.Models.BidViewModel
@{
    ViewData["Title"] = "Place a Bid";
}

<div class="container my-4">
    <div class="card bg-dark text-light shadow-lg rounded-4 mb-4">
        <div class="card-header border-0 bg-gradient fw-bold fs-4">
            @Model.Title
        </div>
        <div class="card-body row g-4">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Категорія</dt>
                    <dd class="col-sm-8">@Model.CategoryName</dd>

                    <dt class="col-sm-4">Стартова ціна</dt>
                    <dd class="col-sm-8">@Model.StartingPrice.ToString("C")</dd>

                    <dt class="col-sm-4">Поточна ставка</dt>
                    <dd class="col-sm-8">@Model.CurrentBid?.ToString("C") ?? "—"</dd>

                    <dt class="col-sm-4">Купити зараз</dt>
                    <dd class="col-sm-8">@Model.BuyNowPrice?.ToString("C") ?? "—"</dd>

                    <dt class="col-sm-4">Початок аукціону</dt>
                    <dd class="col-sm-8">@Model.AuctionStart?.ToLocalTime().ToString("g") ?? "—"</dd>

                    <dt class="col-sm-4">Завершення</dt>
                    <dd class="col-sm-8">@Model.AuctionEnd?.ToLocalTime().ToString("g") ?? "—"</dd>

                    <dt class="col-sm-4">Кількість</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4">Опис</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
            </div>

            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded-3 border"
                     onerror="https://placehold.co/600x400" />
            </div>
        </div>
    </div>

    <div class="card bg-dark text-light shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <form asp-action="Bid" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProductId" />

                <div class="mb-3">
                    <label asp-for="BidAmount" class="form-label"></label>
                    <input asp-for="BidAmount"
                           class="form-control bg-dark text-light border-secondary rounded-3"
                           min="@((Model.CurrentBid ?? Model.StartingPrice) + Model.MinBidIncrement)"
                           step="0.01" />
                    <span asp-validation-for="BidAmount" class="text-danger"></span>
                    <small class="text-muted">
                        Мінімальна ставка:
                        @(((Model.CurrentBid ?? Model.StartingPrice) + Model.MinBidIncrement).ToString("C"))
                    </small>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-primary rounded-3">
                        💸 Зробити ставку
                    </button>

                    @if (Model.BuyNowPrice.HasValue)
                    {
                        <button type="submit"
                                name="BidAmount"
                                value="@Model.BuyNowPrice.Value"
                                class="btn btn-success rounded-3">
                            ⚡ Купити зараз (@Model.BuyNowPrice.Value.ToString("C"))
                        </button>
                    }

                    <a asp-action="Index" asp-controller="ActiveLots"
                       class="btn btn-outline-light rounded-3">
                        ⬅ Повернутись
                    </a>
                </div>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-info mt-3 rounded-3 shadow-sm">
                        @Model.Message
                    </div>
                }
            </form>
        </div>
    </div>

    @if (Model.BidHistory?.Any() == true)
    {
        <div class="card bg-dark text-light shadow-sm rounded-4">
            <div class="card-header border-0 fw-bold">📜 Історія ставок</div>
            <ul class="list-group list-group-flush">
                @foreach (var b in Model.BidHistory)
                {
                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@b.UserId</strong><br />
                            <small class="text-muted">@b.Timestamp.ToLocalTime().ToString("g")</small>
                        </div>
                        <span class="badge bg-primary rounded-pill fs-6">
                            @b.Amount.ToString("C")
                        </span>
                    </li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var input = document.querySelector('[name="BidAmount"]');
            if (!input) return;
            var min = input.getAttribute('min');
            input.addEventListener('focus', function () { input.setAttribute('placeholder', min); });
        })();
    </script>
}
