@model EXAM_ASP_NET.Data.Entities.Product

@{
    ViewData["Title"] = "Active Lot Details";
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Starting Price</dt>
            <dd class="col-sm-9">@Model.StartingPrice.ToString("C")</dd>

            <dt class="col-sm-3">Current Bid</dt>
            <dd class="col-sm-9">@Model.CurrentBid?.ToString("C") ?? "—"</dd>

            <dt class="col-sm-3">Buy Now</dt>
            <dd class="col-sm-9">@Model.BuyNowPrice?.ToString("C") ?? "—"</dd>

            <dt class="col-sm-3">Auction Starts</dt>
            <dd class="col-sm-9">@Model.AuctionStart?.ToLocalTime().ToString("g") ?? "—"</dd>

            <dt class="col-sm-3">Auction Ends</dt>
            <dd class="col-sm-9">@Model.AuctionEnd?.ToLocalTime().ToString("g") ?? "—"</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>

    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" />
    </div>
</div>

<div class="mt-3">
    <a asp-controller="ActiveLots" asp-action="Index" class="btn btn-secondary">Back to Active Lots</a>
    <a asp-controller="ActiveLots" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
</div>