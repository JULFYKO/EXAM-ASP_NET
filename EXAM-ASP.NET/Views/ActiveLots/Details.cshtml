@model EXAM_ASP_NET.Data.Entities.Product

@{
    ViewData["Title"] = "Active Lot Details";
}

<div class="container my-4">
    <div class="card bg-dark text-light shadow-lg rounded-4">
        <div class="card-header border-0 bg-gradient fw-bold fs-4">
            @Model.Title
        </div>
        <div class="card-body row g-4">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Категорія</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>

                    <dt class="col-sm-4">Стартова ціна</dt>
                    <dd class="col-sm-8">@Model.StartingPrice.ToString("C")</dd>

                    <dt class="col-sm-4">Поточна ставка</dt>
                    <dd class="col-sm-8">@Model.CurrentBid?.ToString("C") ?? "—"</dd>

                    <dt class="col-sm-4">Купити зараз</dt>
                    <dd class="col-sm-8">@Model.BuyNowPrice?.ToString("C") ?? "—"</dd>

                    <dt class="col-sm-4">Початок аукціону</dt>
                    <dd class="col-sm-8">@Model.AuctionStart?.ToLocalTime().ToString("g") ?? "—"</dd>

                    <dt class="col-sm-4">Завершення</dt>
                    <dd class="col-sm-8">@Model.AuctionEnd?.ToLocalTime().ToString("g") ?? "—"</dd>

                    <dt class="col-sm-4">Кількість</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4">Опис</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
            </div>

            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Title"
                     class="img-fluid rounded-3 border shadow-sm"
                     onerror="this.src='/images/placeholder.png'" />
            </div>
        </div>
        <div class="card-footer border-0 d-flex flex-wrap gap-2 justify-content-between">
            <a asp-controller="ActiveLots" asp-action="Index"
               class="btn btn-outline-light rounded-3">
                ⬅ Назад до лотів
            </a>
            <a asp-controller="ActiveLots" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary rounded-3">
                ✏ Редагувати
            </a>
        </div>
    </div>
</div>
